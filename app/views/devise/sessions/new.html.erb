
<div class="row">

<div class="col-md-8">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"jumbotron"}) do |f| %>
    
    <fieldset>
    <legend>Iniciar Sesión</legend>
    
        <%= f.input :email%>
        <%= f.input :password%>
        
 
  <% if devise_mapping.rememberable? -%>
    <div>
        <%= f.input :remember_me, as: :boolean%>
    </div>
  <% end -%>

  <div >
      <%= f.button :submit, "Iniciar Sesión" %>
  </div>
  </fieldset>
 
<% end %>

<%= render "devise/shared/links" %>
</div>

    <div class="col-md-8">
        <h2>Bienvenido a JavierBook, tus datos estas seguros con nosotros</h2>
    </div>

</div>